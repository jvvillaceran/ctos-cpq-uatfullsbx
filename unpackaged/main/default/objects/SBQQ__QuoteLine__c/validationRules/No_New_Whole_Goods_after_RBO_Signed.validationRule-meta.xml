<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>No_New_Whole_Goods_after_RBO_Signed</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISNEW(), NOT(ISNULL(SBQQ__Quote__r.Quote_Accepted_Date__c)), OR(ISPICKVAL(SBQQ__Product__r.Product_Type__c, "Inventory"),ISPICKVAL(SBQQ__Product__r.Product_Type__c, "Custom"),ISPICKVAL(SBQQ__Product__r.Product_Type__c, "Package")) )</errorConditionFormula>
    <errorMessage>You cannot add Units to a Quote with a signed RBO. Please create a new quote for any additional units.</errorMessage>
</ValidationRule>
