<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>No_Owner_Change</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISCHANGED(OwnerId), 
OR(CONTAINS($UserRole.Name, "Service"),
CONTAINS($UserRole.Name, "PTA")))</errorConditionFormula>
    <errorMessage>You are not allowed to change the owner on this record. Please contact your Salesforce Administrator.</errorMessage>
</ValidationRule>
